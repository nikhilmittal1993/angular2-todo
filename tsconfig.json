{
  "version": "1.6.2",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/app",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "noImplicitAny": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "node_modules/immutable/dist/*.d.ts"
  ],
  "files": [
    "src/app/bootstrap.ts",
    "src/app/store/actions.ts",
    "src/app/store/reducer.ts",
    "src/app/store/todoitem.ts",
    "src/app/store/todostore.ts",
    "src/app/todoitem/itemupdatedevent.ts",
    "src/app/todoitem/todoitem.ts",
    "src/app/todolist/todolist.ts",
    "node_modules/immutable/dist/immutable.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
